<Window x:Class="BrowserLogin.BrowserLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="ShippingManager CoPilot - Browser Login"
        Height="800" Width="1200"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="600" MinWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1"
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Browser Login" FontSize="20" FontWeight="Bold"
                              Foreground="{StaticResource TextColor}"/>
                    <TextBlock x:Name="StatusText" Text="Please login to ShippingManager..."
                              FontSize="12" Foreground="{StaticResource TextSecondary}"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="TimerText" Text="5:00" FontSize="16" FontWeight="Bold"
                              Foreground="{StaticResource PrimaryColor}"
                              VerticalAlignment="Center" Margin="0,0,15,0"/>

                    <Button x:Name="CancelButton" Content="Cancel"
                           Click="CancelButton_Click"
                           Background="{StaticResource ErrorColor}"
                           Foreground="White" BorderThickness="0"
                           Padding="20,10" FontSize="14" FontWeight="SemiBold"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource ErrorColor}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#dc2626"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WebView2 Browser -->
        <Border Grid.Row="1" Background="White" Margin="0">
            <wv2:WebView2 x:Name="BrowserView" />
        </Border>

        <!-- Footer with status indicators -->
        <Border Grid.Row="2" Background="{StaticResource CardBackground}"
                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Icon -->
                <Border Grid.Column="0" Background="{StaticResource BorderColor}"
                       CornerRadius="20" Width="10" Height="10"
                       VerticalAlignment="Center" Margin="0,0,10,0">
                    <Ellipse x:Name="StatusIndicator" Fill="{StaticResource WarningColor}"/>
                </Border>

                <!-- Status Message -->
                <TextBlock Grid.Column="1" x:Name="FooterStatusText"
                          Text="Waiting for authentication..."
                          FontSize="12" Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"/>

                <!-- Progress Info -->
                <TextBlock Grid.Column="2" x:Name="ProgressText"
                          Text="Checking for session cookie..."
                          FontSize="11" Foreground="{StaticResource TextSecondary}"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Success Overlay (hidden by default) -->
        <Border x:Name="SuccessOverlay" Grid.RowSpan="3"
               Background="#CC0f172a" Visibility="Collapsed">
            <Border Background="{StaticResource CardBackground}"
                   BorderBrush="{StaticResource SuccessColor}" BorderThickness="2"
                   CornerRadius="12" Padding="40"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   MaxWidth="400">
                <StackPanel>
                    <TextBlock Text="âœ“" FontSize="64" Foreground="{StaticResource SuccessColor}"
                              HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Login Successful!" FontSize="24" FontWeight="Bold"
                              Foreground="{StaticResource TextColor}"
                              HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Session cookie validated successfully." FontSize="14"
                              Foreground="{StaticResource TextSecondary}"
                              HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
