<Page x:Class="ShippingManagerCoPilot.Installer.Pages.Uninstall.UninstallConfirmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundColor}">
    <Page.Triggers>
        <!-- Fade-in animation when page loads -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ContentPanel"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid x:Name="ContentPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
            <!-- App Icon/Logo -->
            <Image Source="/icon.ico" Width="64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10" RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Title -->
            <TextBlock Text="Uninstall ShippingManager CoPilot?" FontSize="22" FontWeight="Bold"
                      HorizontalAlignment="Center" Foreground="{StaticResource TextColor}" Margin="0,0,0,12"/>

            <!-- Warning Message -->
            <Border Background="#3f2a1e" BorderBrush="{StaticResource WarningColor}" BorderThickness="1"
                   CornerRadius="6" Padding="10" Width="450" Margin="0,0,0,10">
                <TextBlock Text="⚠️ This will remove ShippingManager CoPilot from your computer."
                          FontSize="14" Foreground="{StaticResource WarningColor}" TextWrapping="Wrap"/>
            </Border>

            <!-- Installation Path Info -->
            <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                   CornerRadius="6" Padding="10" Width="450" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Installation Location:" FontSize="12" Foreground="#9ca3af"/>
                    <TextBlock x:Name="InstallPathText" FontFamily="Consolas" FontSize="11"
                              TextWrapping="Wrap" Foreground="{StaticResource TextColor}" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

            <!-- Delete Data Checkbox -->
            <CheckBox x:Name="DeleteDataCheckbox" Content="Also delete personal data (session cookies, settings)" IsChecked="False"
                     Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Navigation -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <Button Content="Cancel" Click="CancelButton_Click" Padding="20,12"
                       Style="{StaticResource ModernButton}" HorizontalAlignment="Left"/>
                <Button Content="Uninstall" Click="UninstallButton_Click" Padding="40,12"
                       Style="{StaticResource ModernButton}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Page>
