<Page x:Class="ShippingManagerCoPilot.Installer.Pages.Uninstall.UninstallProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
            <!-- Spinner/Loading Animation -->
            <Ellipse Width="60" Height="60" Stroke="{StaticResource PrimaryColor}" StrokeThickness="4"
                    HorizontalAlignment="Center" Margin="0,0,0,30">
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                               From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
                <Ellipse.RenderTransform>
                    <RotateTransform CenterX="30" CenterY="30"/>
                </Ellipse.RenderTransform>
                <Ellipse.OpacityMask>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.OpacityMask>
            </Ellipse>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" Text="Removing application files..." FontSize="18"
                      HorizontalAlignment="Center" Foreground="{StaticResource TextColor}" Margin="0,0,0,30"/>

            <!-- Progress Bar -->
            <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                   CornerRadius="6" Padding="20" Width="450">
                <StackPanel>
                    <ProgressBar x:Name="ProgressBar" Height="6" Minimum="0" Maximum="100" Value="0"
                                Background="#2a2a2a" Foreground="{StaticResource PrimaryColor}" BorderThickness="0"/>
                    <TextBlock x:Name="ProgressText" Text="0%" FontSize="14" Foreground="#9ca3af"
                              HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Task List -->
            <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                   CornerRadius="6" Padding="15" Width="450" Margin="0,20,0,0">
                <StackPanel x:Name="TaskList">
                    <TextBlock x:Name="Task1" Text="[  ] Removing shortcuts..." FontFamily="Consolas" FontSize="13" Foreground="#9ca3af" Margin="0,2"/>
                    <TextBlock x:Name="Task2" Text="[  ] Removing program files..." FontFamily="Consolas" FontSize="13" Foreground="#9ca3af" Margin="0,2"/>
                    <TextBlock x:Name="Task3" Text="[  ] Removing registry entries..." FontFamily="Consolas" FontSize="13" Foreground="#9ca3af" Margin="0,2"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
