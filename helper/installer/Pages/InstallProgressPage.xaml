<Page x:Class="ShippingManagerCoPilot.Installer.Pages.InstallProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundColor}">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="40" Width="500">
            <!-- Spinner Animation -->
            <Grid Height="80" Margin="0,0,0,30">
                <Ellipse Width="60" Height="60" Stroke="{StaticResource PrimaryColor}"
                        StrokeThickness="4" StrokeDashArray="40,20">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotation" CenterX="30" CenterY="30"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                                                   Storyboard.TargetProperty="Angle"
                                                   From="0" To="360" Duration="0:0:1.5" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Grid>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" Text="Installing..." FontSize="20" FontWeight="SemiBold"
                      Foreground="{StaticResource TextColor}" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Progress Bar -->
            <ProgressBar x:Name="ProgressBar" Height="8" Margin="0,0,0,20" Minimum="0" Maximum="100"/>

            <!-- Log TextBox -->
            <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="4" Padding="10" Background="{StaticResource CardBackground}">
                <TextBox x:Name="LogText" IsReadOnly="True" TextWrapping="Wrap"
                        FontFamily="Consolas" FontSize="13" Height="200"
                        VerticalScrollBarVisibility="Auto" Background="{StaticResource CardBackground}" Foreground="{StaticResource TextColor}" BorderThickness="0"/>
            </Border>
        </StackPanel>
    </Grid>
</Page>
