<Page x:Class="ShippingManagerCoPilot.Installer.Pages.CompletePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundColor}">
    <Page.Triggers>
        <!-- Success animation -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="SuccessIcon"
                                   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                   From="0" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <ElasticEase EasingMode="EaseOut" Oscillations="1"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="SuccessIcon"
                                   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                   From="0" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <ElasticEase EasingMode="EaseOut" Oscillations="1"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
            <!-- Success Icon -->
            <TextBlock x:Name="SuccessIcon" Text="âœ“" FontSize="80"
                      Foreground="{StaticResource SuccessColor}" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock.RenderTransform>
                    <ScaleTransform CenterX="40" CenterY="40"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Success Message -->
            <TextBlock Text="Installation Completed!" FontSize="28" FontWeight="Bold"
                      HorizontalAlignment="Center" Foreground="{StaticResource TextColor}" Margin="0,0,0,10"/>

            <TextBlock Text="ShippingManager CoPilot has been successfully installed."
                      FontSize="15" HorizontalAlignment="Center" Foreground="#9ca3af" Margin="0,0,0,30"/>

            <!-- Install Path Info -->
            <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                   CornerRadius="6" Padding="15" Width="400" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Installation Location:" FontSize="12" Foreground="#9ca3af"/>
                    <TextBlock x:Name="InstallPathText" FontFamily="Consolas" FontSize="12"
                              TextWrapping="Wrap" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Launch Checkbox -->
            <CheckBox x:Name="LaunchCheckbox" Content="Launch ShippingManager CoPilot" IsChecked="True"
                     Style="{StaticResource ModernCheckBox}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Navigation -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
            <Button Content="Finish" Click="FinishButton_Click"
                   Style="{StaticResource ModernButton}" Padding="40,12" HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Page>
