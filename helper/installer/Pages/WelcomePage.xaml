<Page x:Class="ShippingManagerCoPilot.Installer.Pages.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundColor}">
    <Page.Triggers>
        <!-- Fade-in animation when page loads -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ContentPanel"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid x:Name="ContentPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50">
            <!-- App Icon/Logo -->
            <Image Source="/icon.ico" Width="96" Height="96" HorizontalAlignment="Center" Margin="0,0,0,20" RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Title -->
            <TextBlock Text="Welcome to" FontSize="16" FontWeight="Light"
                      HorizontalAlignment="Center" Foreground="{StaticResource TextColor}"/>
            <TextBlock Text="ShippingManager CoPilot" FontSize="32" FontWeight="Bold"
                      HorizontalAlignment="Center" Foreground="{StaticResource PrimaryColor}" Margin="0,5,0,20"/>

            <!-- Version -->
            <TextBlock x:Name="VersionText" FontSize="15" HorizontalAlignment="Center"
                      Foreground="#9ca3af" Margin="0,0,0,30"/>

            <!-- Description -->
            <TextBlock TextWrapping="Wrap" Width="500" TextAlignment="Center"
                      Foreground="{StaticResource TextColor}" FontSize="15" LineHeight="24">
                This wizard will guide you through the installation of ShippingManager CoPilot on your computer.
            </TextBlock>

            <!-- GitHub Link -->
            <TextBlock HorizontalAlignment="Center" Margin="0,30,0,0">
                <Hyperlink NavigateUri="https://github.com/sitzmoebelchronograph/shippingmanager_copilot" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="View on GitHub" Foreground="{StaticResource PrimaryColor}" FontSize="13"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Navigation -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <Button Content="Cancel" Click="CancelButton_Click" Padding="20,12"
                       Style="{StaticResource ModernButton}" HorizontalAlignment="Left"/>
                <Button Content="Next â†’" Style="{StaticResource ModernButton}"
                       HorizontalAlignment="Right" Click="NextButton_Click" Padding="40,12"/>
            </Grid>
        </Border>
    </Grid>
</Page>
