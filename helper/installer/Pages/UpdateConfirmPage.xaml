<Page x:Class="ShippingManagerCoPilot.Installer.Pages.UpdateConfirmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundColor}">
    <Page.Triggers>
        <!-- Fade-in animation when page loads -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="ContentPanel"
                                   Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.5"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Page.Triggers>

    <Grid x:Name="ContentPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30">
            <!-- App Icon/Logo -->
            <Image Source="/icon.ico" Width="64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10" RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Title -->
            <TextBlock Text="Update ShippingManager CoPilot?" FontSize="22" FontWeight="Bold"
                      HorizontalAlignment="Center" Foreground="{StaticResource TextColor}" Margin="0,0,0,12"/>

            <!-- Info Message -->
            <Border Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                   CornerRadius="6" Padding="10" Width="450" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Existing Installation:" FontSize="12" Foreground="#9ca3af"/>
                    <TextBlock x:Name="ExistingVersionText" FontWeight="Bold" FontSize="14"
                              TextWrapping="Wrap" Foreground="{StaticResource TextColor}" Margin="0,3,0,8"/>

                    <TextBlock Text="Installation Location:" FontSize="12" Foreground="#9ca3af"/>
                    <TextBlock x:Name="InstallPathText" FontFamily="Consolas" FontSize="11"
                              TextWrapping="Wrap" Foreground="{StaticResource TextColor}" Margin="0,3,0,8"/>

                    <TextBlock Text="New Version:" FontSize="12" Foreground="#9ca3af"/>
                    <TextBlock x:Name="NewVersionText" FontWeight="Bold" FontSize="14"
                              TextWrapping="Wrap" Foreground="{StaticResource PrimaryColor}" Margin="0,3,0,0"/>
                </StackPanel>
            </Border>

            <!-- Warning Message -->
            <Border Background="#1e3a4f" BorderBrush="{StaticResource PrimaryColor}" BorderThickness="1"
                   CornerRadius="6" Padding="10" Width="450" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="ℹ️ Update will:" FontSize="13" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,5"/>
                    <TextBlock Text="• Overwrite program files with new version" FontSize="13" Foreground="{StaticResource TextColor}" Margin="15,2,0,2"/>
                    <TextBlock Text="• Keep all your personal data and settings" FontSize="13" Foreground="{StaticResource TextColor}" Margin="15,2,0,2"/>
                    <TextBlock Text="• Stop the running application if needed" FontSize="13" Foreground="{StaticResource TextColor}" Margin="15,2,0,2"/>
                    <TextBlock Text="• Update desktop and start menu shortcuts" FontSize="13" Foreground="{StaticResource TextColor}" Margin="15,2,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Navigation -->
        <Border Grid.Row="1" Background="{StaticResource CardBackground}" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <Button Content="Cancel" Click="CancelButton_Click" Padding="20,12"
                       Style="{StaticResource ModernButton}" HorizontalAlignment="Left"/>
                <Button Content="Update Now" Click="UpdateButton_Click" Padding="40,12"
                       Style="{StaticResource ModernButton}" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Page>
